
@{
    Layout = null;
    DataModels.movie movie = (DataModels.movie) ViewBag.movie;
}

<!DOCTYPE html>

<html>
<body>
    <div> 
        <table id="filmDetails">
            <tbody>
                <tr>
                    <td>Film Title:</td>
                    <td>@movie.original_title</td>
                </tr>
                <tr>
                    <td>Average score:</td>
                    <td>@movie.vote_average</td>
                </tr>
                <tr>
                    <td>Genres represented:</td>
                    <td>@ViewBag.genres</td>
                </tr>
                <tr>
                    <td>Plot:</td>
                    <td>@ViewBag.plot</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
